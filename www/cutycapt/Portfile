                    sha256  178dd59c5c681c6101a6bad27c8cfb584e35c2a39d99f3a9d865e9874bcb8a61
worksrcdir          CutyCapt

post-destroot {
    move "${worksrcpath}/CutyCapt.app/Contents/MacOS/CutyCapt" "${destroot}${prefix}/bin/cutycapt"
